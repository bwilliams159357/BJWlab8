<div id="cp-sidebar">
	<%= link_to "Profile", 'controlpanel' %><br/>
	<%= link_to "Friends", 'friends' %><br/>
	<%= link_to "Collections", 'collections' %>
</div>
<div id="cp-user-info">
	<center>
	<table>
		<tr>
			<th colspan="2">User Profile</th>
		</tr>
		<tr>
			<td>Username:</td>
			<td><%= current_user.email %></td>
		</tr>
	</table>
	<%
		@friends = Friends.find(:all, :conditions => ['user_id LIKE ?', current_user.id])
		if @friends.any?
			@friends.each do |friend| %>
			<% 
			   @fr = User.find(friend.friend_id)
		    %>
		    <%= @fr.email %><br/>
				
			<% end
		end
	%>
	<% if !current_user.nil? && current_user.admin %>
	<%= link_to "User List", "/users" %><br/>
	<%= link_to "Game List", "/games" %><br/>
	<%= link_to "Add Game", "/games/new" %><br/>
	<% end %>
	</center>
</div>